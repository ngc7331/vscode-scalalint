{
  "name": "scalalint",
  "displayName": "scalalint",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:scala"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scalalint.run",
        "title": "Run scalalint"
      }
    ],
    "configuration": {
      "title": "scalalint",
      "properties": {
        "scalalint.runOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Run scalalint on save."
        },
        "scalalint.srcRoot": {
          "type": "string",
          "default": ".",
          "description": "Root directory for Scala source files."
        },
        "scalalint.scalastyle.configFile": {
          "type": "string",
          "default": "./scalastyle-config.xml",
          "description": "Path to the scalastyle configuration file."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
